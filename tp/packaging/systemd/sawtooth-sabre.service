[Unit]
Description=Sawtooth Smart TP
After=network.target

[Service]
User=sawtooth
Group=sawtooth
EnvironmentFile=-/etc/default/sawtooth-smart
ExecStart=/usr/bin/sawtooth-smart $SAWTOOTH_SMART_ARGS
Restart=on-failure

[Install]
WantedBy=multi-user.target
